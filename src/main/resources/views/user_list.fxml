<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox spacing="8" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.clientfx.controller.UserListController">
  <TableView fx:id="userTable">
    <columns>
      <TableColumn text="ID" fx:id="idCol"/>
      <TableColumn text="Name" fx:id="nameCol"/>
      <TableColumn text="Actions" fx:id="actionCol"/>
    </columns>
  </TableView>
  <HBox spacing="8">
    <Button text="Edit" onAction="#onEditUser"/>
    <Button text="Delete" onAction="#onDeleteUser"/>
    <Button text="Open Chat" onAction="#onOpenChat"/>
  </HBox>
</VBox>
