<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.clientfx.controllers.AddChatUserController"
      spacing="10"
      alignment="CENTER">
    <!-- Proper padding element instead of padding="10" -->
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="Select user to chat with:"/>

    <ListView fx:id="userListView"/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Add"    fx:id="addButton"  onAction="#addSelectedUser"/>
        <Button text="Cancel" onAction="#onCancel"/>
    </HBox>
</VBox>
